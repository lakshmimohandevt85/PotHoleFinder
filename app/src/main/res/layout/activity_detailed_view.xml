<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sdsu.cs646.lakshmi.assignment4.DetailedViewActivity"
    android:background="#a48ceb">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:onClick="back"
        android:id="@+id/button5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textview_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description..."
        android:maxLength="300"
        android:layout_marginBottom="34dp"
        android:background="#A8A8A8"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageviewPhoto"
        android:layout_alignStart="@+id/imageviewPhoto"/>

    <ImageView
        android:id="@+id/imageviewPhoto"
        android:layout_width="fill_parent"
        android:layout_height="130dp"
        android:layout_marginLeft="3dip"
        android:scaleType="fitXY"
        android:layout_below="@+id/button5"
        android:background="#A8A8A8"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/singleMap"
        android:onClick="viewMap"
        android:id="@+id/button_map"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>



</RelativeLayout>
