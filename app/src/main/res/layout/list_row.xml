<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:id="@+id/recLayout"
                android:background="@drawable/selector"
    >


    <!-- <ImageView -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/placeholder"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:maxLines="0"
        android:layout_below="@+id/id"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:visibility="invisible"
        android:paddingLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="latitude"
        android:id="@+id/latitude"
        android:paddingLeft="5dp"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_toRightOf="@+id/id"
        android:layout_toEndOf="@+id/id"
        android:layout_marginLeft="43dp"
        android:visibility="invisible"
        android:layout_marginStart="43dp"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Hello World"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/thumbnail"
        />

    <TextView
        android:id="@+id/created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text=""
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/latitude"
        android:layout_toRightOf="@+id/latitude"
        android:layout_toEndOf="@+id/latitude"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="type"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:textColor="#000"
        android:layout_alignTop="@+id/latitude"
        android:layout_toLeftOf="@+id/latitude"
        android:layout_toStartOf="@+id/latitude"/>

    <TextView
        android:id="@+id/imagetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="imgtype"
        android:maxLines="0"
        android:visibility="invisible"
        android:paddingLeft="5dp"/>

    <TextView
        android:id="@+id/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="url"
        android:maxLines="0"
        android:visibility="invisible"
        />

</RelativeLayout>